{
  "compilerOptions": {
    // Базовые настройки
    "target": "esnext",
    "module": "nodenext",

    // Типы окружения
    "types": ["cypress", "node"],

    // Вывод
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,

    // Проверки
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,

    // Модули
    "isolatedModules": true,
    "skipLibCheck": true,

    // JSX
    "jsx": "react-jsx"
  },
  "include": [
    "cypress/**/*.ts",
    "cypress.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}